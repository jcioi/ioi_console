= content_for(:content_header) { "Editing Contestant" }

- person = @person
= form_with(model: person, url: contestant_path(person), local: true, class: 'form-horizontal') do |form|
  - if person.errors.empty?
    .form-group#error_explanation
      %ul
        - person.errors.full_messages.each do |message|
          %li= message
  .form-group
    = form.label :login, class: 'col-sm-2 control-label'
    .col-sm-10
      = form.text_field :login, class: 'form-control', disabled: true
  .form-group
    = form.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = form.text_field :name, class: 'form-control', placeholder: 'Display Name', disabled: true
  .form-group
    %label.col-sm-2.control-label Full Name
    .col-sm-5
      = form.text_field :first_name, class: 'form-control', placeholder: 'First', disabled: true
    .col-sm-5
      = form.text_field :last_name, class: 'form-control', placeholder: 'Last', disabled: true
  .form-group
    = form.label :team, class: 'col-sm-2 control-label'
    .col-sm-10
      = form.text_field :team, value: person.team ? person.team.slug : nil, class: 'form-control', placeholder: 'Team Slug', disabled: true

  .form-group
    = form.label :special_requirement_note, class: 'col-sm-2 control-label'
    .col-sm-10
      = form.text_area :special_requirement_note, class: 'form-control', placeholder: "Explain the contestant's special needs (optional)."

  .form-group
    .col-sm-10.col-sm-offset-2
      = form.submit(class: 'btn btn-primary')
